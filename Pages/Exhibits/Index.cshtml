                @Html.DisplayFor(modelItem => item.Comic_Universe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hero_Power)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issue_of_Apparition)
