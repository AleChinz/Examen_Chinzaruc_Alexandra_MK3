            <td>
                @Html.DisplayFor(modelItem => item.Issue_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstAppearanceDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
